<section class="mt-3">
  <h1 class="text-center bg-danger">IDX Scraper</h1>
  <form
    action="/idx"
    method="post"
    class="row g-3 d-flex flex-column justify-content-center align-items-center"
  >
    <div class="col-auto">
      <label for="inputPassword2">Company Code:</label>
      <input
        name="companyCode"
        type="text"
        class="form-control"
        id="inputPassword2"
        placeholder="Input here..."
        required
      />
    </div>
    <div class="col-auto">
      <label for="inputPassword2">Date (YYYYMMDD):</label>
      <input
        name="date"
        type="text"
        class="form-control"
        id="inputPassword2"
        placeholder="YYYY.MM.DD"
        required
      />
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary w-100">Get Data</button>
    </div>
  </form>
</section>
<%if(datas !==undefined){%>
  <div class="info-input my-2">
    <h5 class="text-center">Input date: <%=targetDate%></h2>
    <h5 class="text-center">Company: <%=companyCode%></h2>
  </div>
  <%datas.forEach((dataArray)=>{%>
  <section class="bg-light p-3 m-5 rounded-3">
  <h3 class="badge bg-success text-center"><%=dataArray.name%> <%=maxDay%> Days</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Bid</th>
        <th scope="col">Offer</th>
      </tr>
    </thead>
    <tbody>
      <%dataArray.data.forEach((data)=>{%>
          <tr>
            <td><%=data.Date.slice(0, 10).split("-").join("")%></td>
            <td><%=data.Bid%></td>
            <td><%=data.Offer%></td>
          </tr>
        <%})%>
      </tbody>
    </table>
  </section>
  <%})%>
<audio hidden controls autoplay>
  <source src="/audio/notif.mp3" type="audio/mpeg" />
  Your browser does not support the audio element.
</audio>
<%}%>